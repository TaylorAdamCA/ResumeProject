@model IEnumerable<ResumeBuilder.Data.Entities.Resume>

@{
    ViewData["Title"] = "Index";
}

@if (Model == null)
{
    <h5>You haven't created any resumes yet, click  <a asp-action="Create">Here </a> to create your first one!</h5>

}
else
{

    <p>
        <a asp-action="Create">Create New Resume</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        View |  @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    </td>
                    @*<td>
                            @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                            @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                        </td>*@
                </tr>
            }
        </tbody>
    </table>
}